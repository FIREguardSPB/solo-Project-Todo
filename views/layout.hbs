<!DOCTYPE html>
<html>

<head>

  <title>Shedulder JS</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
    integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  <link rel="stylesheet" href="stylesheets/style.css">
 
<script defer> 
  alert(';jgf')
  let formAddToDo = document.getElementById('addTodo')

formAddToDo.addEventListener('submit', async (event) => {
  event.preventDefault()
  let nameTodo = event.target.value
  let descriptionTodo = event.target.value
  let status = event.target.value
  let startClock = event.target.value
  let endClock = event.target.value
  let start = event.target.start.value
  let end = event.target.end.value
  let nameTodo = event.target.nameTodo.value
  const body = {
    start,
    end,
    nameTodo,
    descriptionTodo,
    status,
    startClock,
    endClock
  }

  let {action, method} = event.target

  let response = await fetch(action, {
    method,
    headers: {
      'Content-Type': 'application/json'
    },
    body: JSON.stringify(body)
  })

  const result = response

  if(result) {
    alert("kkkk");
      }
  })
  
</script>
</head>

<body class="container">

  {{{body}}}

</body>


</html>

