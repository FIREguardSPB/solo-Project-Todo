<div class="container row">
  <div class="jumbotron col-sm-4 pull-center">
    <form action="/api/auth/signup" method="post">
      <div>
        <label>Username:</label>
        <input type="text" name="username" required minlength="1" />
      </div>
      <div>
        <label>name:</label>
        <input type="text" name="name" required minlength="1"/>
      </div>
      <div>
        <label>surname:</label>
        <input type="text" name="surname" required minlength="1"/>
      </div>
      <div>
        <label>Email:</label>
        <input type="email" name="email" required minlength="1"/>
      </div>
      <div>
        <label>Password:</label>
        <input type="password" name="password" required minlength="1"/>
      </div>
      <div>
        <label>Age:</label>
        <input type="text" name="age" required minlength="1"/>
      </div>
      <label>Role:</label>
      <select name="role">
        <option disabled>Ваша роль</option>
        <option>Студент</option>
        <option>Преподаватель</option>
      </select>
      <div>
        <label>Skill:</label>
        <input type="text" name="skill" required minlength="1"/>
      </div>
      <div>
        <input class="btn btn-primary" type="submit" value="Sign Up" />
      </div>

    </form>
  </div>
